<body>
    <main class="container" style="max-width: 950px;">
        <article>
            <h1>To-Do</h1>
            <form hx-post="/add-item" hx-target="ul" hx-swap="beforeend">
                <fieldset role="group">
                    <input name="item">
                    <input type="submit" value="Add Item">
                </fieldset>
            </form>
            <ul></ul>
        </article>
    </main>
